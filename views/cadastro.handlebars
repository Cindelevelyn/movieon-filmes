<div class="index-main container-fluid">
  <div class="row d-flex justify-content-around align-items-center p-4">
    <div class="col-xl-6 col-xs-12">
      <img src="/assets/cadastro_img.png" width="500" alt="">
    </div>
    <div class="col-xl-4 col-xs-12 rounded-5 p-4 bg-secondary bg-opacity-25 h-100">
      <form method="post" action="/cadastro">
        <h2 class="text-center">Cadastro</h2>

        {{#if mensagemErro}}
        <p style="color: red; text-align: center;">
          {{mensagemErro}}
        </p>
        {{/if}}

        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Nome:</label>
          <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome...">
        </div>
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Email:</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
        </div>
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Senha:</label>
          <input type="password" class="form-control" id="pwd" name="pwd" placeholder="Digite sua senha...">
        </div>

        <button type="submit" class="mt-2 mb-2 w-100 btn btn-light">Cadastrar</button>
        <a href="/entrar" class="d-flex justify-content-center text-center text-white">JÃ¡ sou cadastrado.</a>
      </form>
    </div>
  </div>
</div>